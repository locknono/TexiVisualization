<div id='heading' class='panel panel-default'>
    <svg id='headingSvg'></svg>
    <span class='headingText'>Visual Exploration of Urban Functions</span>
    <div id='chooseClusterNumber' class="btn-group">
        <button type="button" class="btn btn-default">Choose clusters</button>
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="caret"></span>
            <span class="sr-only">Toggle Dropdown</span>
        </button>
        <ul class="dropdown-menu">
            <li>
                <a href="http://localhost:3000/5?status=-1">5</a>
            </li>
            <li>
                <a href="http://localhost:3000/7?status=-1">7</a>
            </li>
            <li>
                <a href="http://localhost:3000/13?status=-1">13</a>
            </li>
            <li>
                <a href="http://localhost:3000/20?status=-1">20</a>
            </li>
        </ul>
    </div>
    <div id='chooseStatus' class="widget">
        <label for="radio-1">All</label>
        <input type="radio" name="radio-1" id="radio-1">
        <label for="radio-2">On</label>
        <input type="radio" name="radio-2" id="radio-2">
        <label for="radio-3">Off</label>
        <input type="radio" name="radio-3" id="radio-3">
    </div>

</div>
<div id='container-main' class="panel panel-default" clusterNumber={{clusterNumber}} status={{status}}>
    <div id='fluxNet' class='panel panel-default'>
        <span class='titleText'>Force-directed View</span>
        <svg id='netSvg'></svg>
    </div>
    <div id='pieDiv' class='panel panel-default'>
        <span class='titleText'>Pie Chart View</span>
        <svg id='pieSvg'> </svg>
        <div class="controlgroup-vertical globalStatus">
            <label for="globalStatus">Global</label>
            <input type="radio" name="transmission" id="globalStatus" checked>
            <label for="localStatus">Local</label>
            <input type="radio" name="transmission" id="localStatus">
        </div>
    </div>
    <div id='odView' class='panel panel-default'>
        <span class='titleText'>TimeLine View</span>
        <canvas id='odCanvas'>
        </canvas>
    </div>
    <div id='map' class='panel panel-default'>
    </div>
    <div id='suspendingDiv' class='panel panel-default'>
        <svg id='suspendingSvg'>
        </svg>
    </div>
</div>